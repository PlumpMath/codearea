
body
  margin 0px

#main
  width 100%
  height 100%

#text, #view
  width 50%
  height 100%
  display inline-block
  overflow scroll

#text
  background hsl(300,40%,30%)
  color white
  border 0px
  padding 10px 6px
  font-size 14px
  resize none

#view
  background hsl(20,92%,92%)
  box-sizing border-box


::-webkit-scrollbar
  width 6px
  height 6px

::-webkit-scrollbar-thumb
  background black

div>p
  line-height 22px
  margin 10px 0px
  padding 0px 6px

blockquote>p
  margin -10px 0px

pre, p>code
  font-size 14px
  margin 0px
  background hsl(340,90%,20%)
  color white
  box-sizing border-box
  padding 0px 6px

blockquote
  margin 0px 0px 0px 20px
  background hsl(300,20%,80%)

ul, ol
  margin 0px 0px 0px 20px
  background hsl(50,90%,90%)

h1, h2, h3, h4
  margin 10px

a
  text-decoration none
  background hsl(240,80%,90%)
  padding 0px 6px

hr
  border-top 0px
  border-color hsl(0,0%,76%)
  width 70%
  margin 20px